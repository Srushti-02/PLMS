@model PLMS.Models.ModelViews.ApplicantViewModel

@{
    ViewBag.Title = "New Application";
}

<!-- Bootstrap CDN (if layout isn't used) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">📄 Application Form</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Apply", "Applicant", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()


                        <div class="mb-3">
                            @Html.LabelFor(m => m.FullName, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Enter your full name" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email", type = "email" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Address, htmlAttributes: new { @class = "form-label" })
                            @Html.TextAreaFor(m => m.Address, new { @class = "form-control", placeholder = "Enter your address", rows = 3 })
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.AadhaarNumber, htmlAttributes: new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.AadhaarNumber, new { @class = "form-control", placeholder = "Enter Aadhaar Number" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.PANNumber, htmlAttributes: new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.PANNumber, new { @class = "form-control", placeholder = "Enter PAN Number" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.DOB, htmlAttributes: new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.DOB, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.MonthlyIncome, htmlAttributes: new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.MonthlyIncome, new { @class = "form-control", placeholder = "Enter Monthly Income", type = "number", step = "0.01" })
                            </div>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.CompanyName, htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", placeholder = "Enter Company Name" })
                        </div>

                        @*<div class="mb-4">
                            @Html.Label("Photo", htmlAttributes: new { @class = "form-label" })
                            <input type="file" name="Photo" class="form-control" />
                        </div>*@

                        <div class="d-grid">
                            <button type="submit" id="submitBtn" class="btn btn-success btn-lg">
                                <i class="fas fa-paper-plane me-1"></i> Submit Application
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("loanApplicationForm").addEventListener("submit", function () {
        var btn = document.getElementById("submitBtn");
        btn.disabled = true;
        btn.innerText = "Submitting...";
    });
</script>