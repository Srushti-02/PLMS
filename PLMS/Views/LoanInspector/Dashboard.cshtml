@model IEnumerable<PLMS.Models.ModelViews.LoanInspectorViewModel>

@{
    ViewBag.Title = "Loan Inspector Dashboard";
}

@Html.AntiForgeryToken()
<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h2 class="text-primary">👮 Loan Inspector Dashboard</h2>
        <div>
            <span class="me-3 text-success">👋 Welcome, <b>@ViewBag.Username</b></span>
            <a href="@Url.Action("ChangePassword", "Home")" class="btn btn-warning btn-sm">🔐 Change Password</a>
            <a href="@Url.Action("LogOut", "Home")" class="btn btn-danger btn-sm">🚪 Logout</a>
        </div>
    </div>

    <table class="table table-bordered table-striped text-center">
        <thead class="table-dark">
            <tr>
                <th>Applicant Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Company</th>
                <th>Status</th>
                <th>Remark</th>
                <th>View History</th>
                <th>Update Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ApplicantName</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.CompanyName</td>
                    <td>
                        <span class="badge bg-@(item.Status == "Approved" ? "success" : item.Status == "Rejected" ? "danger" : "secondary")">@item.Status</span>
                    </td>
                    <td>@item.Remark</td>
                    <td>
                        <button class="btn btn-info btn-sm" onclick="viewHistory(@item.applicantId)">📜 History</button>
                    </td>
                    <td>
                        <select class="form-select form-select-sm status-select" id="status-@item.ApplicationId">
                            <option value="">-- Select Status --</option>
                            <option value="Approved">✅ Approve</option>
                            <option value="Rejected">❌ Disapprove</option>
                        </select>
                    </td>
                    <td>
                        <form method="post" action="@Url.Action("UpdateStatus", "LoanInspector")">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="applicationId" value="@item.ApplicationId" />
                            <input type="hidden" name="status" id="hidden-status-@item.ApplicationId" />
                            <button type="submit" class="btn btn-primary btn-sm" onclick="return setStatus('@item.ApplicationId')">🔄 Update</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="historyModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Loan Application History</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered text-center" id="historyTable">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Company</th>
                            <th>Status</th>
                            <th>Remark</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    function viewHistory(applicantId) {
        $.getJSON('@Url.Action("ViewHistory", "LoanInspector")', { applicantId: applicantId }, function (data) {
            var tbody = $('#historyTable tbody');
            tbody.empty();
            data.forEach(function (item) {
                tbody.append(`<tr>
                    <td>${item.email}</td>
                    <td>${item.companyName}</td>
                    <td>${item.loanStatus}</td>
                    <td>${item.remark}</td>
                </tr>`);
            });
            new bootstrap.Modal(document.getElementById('historyModal')).show();
        });
    }

    function setStatus(applicationId) {
        var selectedStatus = document.getElementById("status-" + applicationId).value;
        var hiddenInput = document.getElementById("hidden-status-" + applicationId);
        if (!selectedStatus) {
            alert("Please select a status before updating.");
            return false; // prevent form submit
        }
        hiddenInput.value = selectedStatus;
        return true;
    }
</script>
